  "image": "https://images.unsplash.com/photo-1531297484001-80022131f5a1?q=80&w=1000&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8dGVjaHxlbnwwfHwwfHx8MA%3D%3D",

  "remoteUser": "codespace",
  "overrideCommand": false,
 // Add the IDs of extensions you want installed when the container is created.
